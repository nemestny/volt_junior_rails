<div class="row justify-content-md-center">
  <%= form_with(url: api_v1_user_path(@current_user), method: :patch ) do |f| %>
    <div class="form-group">
      <h2>
        Upload avatar, 
        <%= @current_user.nickname %>
      </h2>
    </div>
    <div class="form-group">
      <% if @current_user.avatar.attached? %>
        <%= image_tag(@current_user.avatar.variant(resize_to_fit: [300, 300]), class: "img-fluid") %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.file_field :avatar, direct_upload: true %>
    </div>
    <div class="actions">
      <%= f.submit  class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
